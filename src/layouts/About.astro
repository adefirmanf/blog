---
import BaseLayout from "./BaseLayout.astro";

type Props = {
    github: string
    phone: string
    linkedIn: string
    email: string
}

const {email, github, phone, linkedIn} = Astro.props
---


<BaseLayout title="About">
  <div class="rbt-overlay-page-wrapper">
    <div class="rbt-banner-content-top">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 mt--30">
            <div class="profile-content">
              <h4 class="rbt-title-style-3">About Me</h4>
              <div class="row">
                <div class="col-lg-4">
                    <div class="rbt-tutor-information no-bottom">
                        <div class="rbt-tutor-information-left ">
                            <div class="thumbnail rbt-avatars size-lg">
                                <img src="/images/about/pp.png" alt="Instructor">
                            </div>
                            <div class="tutor-content">
                                <h5>Ade Firman Fauzi <br>
                                    <small class="text-muted">
                                        <span> Software Engineer </span>
                                    </small>
                                </h5>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                 
                    <slot/>
                    <!--  -->
                  <ul class="social-icon social-default justify-content-start">
                    <li>
                      <a href={linkedIn}>
                        <i class="feather-linkedin"></i>
                      </a>
                    </li>
                    <li>
                        <a href={github}>
                          <i class="feather-github"></i>
                        </a>
                      </li>
                  </ul>
                  <ul class="rbt-information-list mt--15">
                    <li>
                      <a href="#"
                        ><i class="feather-phone"></i>+{phone}</a
                      >
                    </li>
                    <li>
                      <a href="mailto:hello@example.com"
                        ><i class="feather-mail"></i>{email}</a
                      >
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
    .no-bottom{
        bottom: auto !important;
    }
</style>
<script is:inline>
    document.querySelectorAll(".rbt-accordion-style").forEach(el => el.remove());
</script>