---
export interface Props {
    image: string;
    title: string;
    href: string;
    published_date: string;
	body: string;
    author: string
    time_to_read: string
}

const { image, published_date, title, author, href, time_to_read } = Astro.props;
let {body} = Astro.props

body = body.substring(0, 120) + '...'
---
<!-- Start Single Card  -->
<div class="col-lg-6 col-md-6 col-12">
    <div class="rbt-blog-grid rbt-card variation-02 rbt-hover">
        <div class="rbt-card-img">
            <a href={href}>
                <img src={image} alt="Card image"> </a>
        </div>
        <div class="rbt-card-body">
            <h5 class="rbt-card-title"><a href={href}>{title}.</a></h5>

            <ul class="blog-meta">
                <li><i class="feather-user"></i>{author}</li>
                <li><i class="feather-clock"></i>{published_date}</li>
                <li><i class="feather-watch"></i>{time_to_read}</li>
            </ul>
            <p class="rbt-card-text">{body}</p>
            <div class="rbt-card-bottom">
                <a class="transparent-button" href={href}>Learn
                    More<i><svg width="17" height="12" xmlns="http://www.w3.org/2000/svg"><g stroke="#27374D" fill="none" fill-rule="evenodd"><path d="M10.614 0l5.629 5.629-5.63 5.629"></path><path stroke-linecap="square" d="M.663 5.572h14.594"></path></g></svg></i></a>
            </div>
        </div>
    </div>
</div>
<!-- End Single Card  -->