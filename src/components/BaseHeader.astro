---
import { SEO } from "astro-seo";

type Props = {
    title: string;
    description: string;
    image?: string;
    imageCaption?: string;
};

const {title, description, image} = Astro.props;
const defaultDescription = "Our blog offers expert analysis, product reviews, and thought-provoking insights on everything from the latest gadgets to the most innovative software"
const defaultImage = '/images/homebanner.png'
---
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/images/favicon/icons8-xbox-a-ios-16-96.png">
    <SEO 
        title={`${title} | adefirmanf.dev`}
        description={description ? description : defaultDescription}
        openGraph={{
            basic: {
                title: `${title}`,
                type: 'website',
                image: `${image ? image : defaultImage}`
            },
            image: {
                alt: `${description ? description : defaultDescription}`,
            }
        }}
        extend={{
            // extending the default link tags
            link: [{ rel: "icon", href: "/images/favicon/icons8-xbox-a-ios-16-96.png" }],
        }}
    />
    <style is:inline>
        @import "/css/vendor/bootstrap.min.css";
        @import "/css/vendor/slick.css";
        @import "/css/vendor/slick-theme.css";
        @import "/css/plugins/sal.css";
        @import "/css/plugins/feather.css";
        @import "/css/plugins/fontawesome.min.css";
        @import "/css/plugins/euclid-circulara.css";
        @import "/css/plugins/swiper.css";
        @import "/css/plugins/magnify.css";
        @import "/css/plugins/odometer.css";
        @import "/css/plugins/animation.css";
        @import "/css/plugins/bootstrap-select.min.css";
        @import "/css/plugins/jquery-ui.css";
        @import "/css/plugins/magnigy-popup.min.css";
        @import "/css/style.css";
    </style>
</head>
